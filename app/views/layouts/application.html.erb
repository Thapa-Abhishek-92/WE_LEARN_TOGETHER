<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>WE LEARN TOGETHER - 日本語学習コミュニティ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="min-h-screen bg-gray-50 text-gray-900 flex flex-col">
    <%= render "shared/header" %>

    <!-- フラッシュ: body直下で表示 -->
    <div class="w-full">
      <div class="mx-auto max-w-screen-xl px-4 mt-4">
        <% if notice.present? %>
          <p class="mb-3 rounded-md bg-green-100 text-green-900 px-4 py-2">
            <%= notice %>
          </p>
        <% end %>
        <% if alert.present? %>
          <p class="mb-3 rounded-md bg-red-100 text-red-900 px-4 py-2">
            <%= alert %>
          </p>
        <% end %>
      </div>
    </div>

    <main class="flex-1" role="main">
      <%= yield %>
    </main>

    <%= render "shared/footer" %>
  </body>
</html>
