<%# app/views/devise/sessions/new.html.erb %>
<div class="login-page" style="display:flex; justify-content:center; padding:40px 16px;">
  <div class="login-card" style="width:100%; max-width:520px; text-align:center;">
    <h2 style="font-size:22px; font-weight:700; margin:0 0 24px;">ログイン</h2>

    <%# Deviseのエラーメッセージ（未入力・無効など） %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with model: resource,
                  as: resource_name,
                  url: session_path(resource_name),
                  data: { turbo: false } do |f| %>

      <div style="margin-bottom:18px;">
        <label for="user_email" style="display:block; font-weight:600; margin-bottom:6px;">メールアドレス</label>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              required: true,
              style: "width:50%; min-width:260px; height:42px; padding:0 12px; border:1px solid #d1d5db; border-radius:6px;" %>
      </div>

      <div style="margin-bottom:18px;">
        <label for="user_password" style="display:block; font-weight:600; margin-bottom:6px;">パスワード</label>
        <%= f.password_field :password,
              autocomplete: "current-password",
              required: true,
              style: "width:50%; min-width:260px; height:42px; padding:0 12px; border:1px solid #d1d5db; border-radius:6px;" %>
      </div>

      <div style="margin:20px 0 8px;">
        <%= f.submit "ログイン",
              style: "width:200px; height:44px; font-weight:700; background:#1137ff; color:#fff; border:none; border-radius:8px; cursor:pointer;" %>
      </div>
    <% end %>

    <div style="display:flex; justify-content:space-between; align-items:center; width:50%; min-width:260px; margin:16px auto 0;">
      <%= link_to "パスワード忘れた方", new_user_password_path %>
      <%= link_to "新規登録はこちら", new_user_registration_path %>
    </div>
  </div>
</div>
