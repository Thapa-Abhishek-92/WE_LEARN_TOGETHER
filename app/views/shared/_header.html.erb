<header class="border-b bg-white" role="banner">
  <div class="container-page py-4">
    <div class="flex items-center justify-between">
      <!-- ロゴ -->
      <h1 class="text-xl font-extrabold tracking-tight text-gray-900">
        <%= link_to "WE LEARN TOGETHER", root_path, class: "no-underline hover:text-blue-600" %>
      </h1>

      <!-- 右上ナビ -->
      <nav class="flex items-center gap-8">
        <% if user_signed_in? %>
          <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
          <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
          <%= link_to "マイページ", "#", class: "btn btn-secondary" %>
          <%= button_to "ログアウト", destroy_user_session_path,
                        method: :delete, data: { turbo: false },
                        form: { class: "inline-block" }, class: "btn btn-ghost" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
          <%= link_to "新規登録", new_user_registration_path, class: "nav-link ml-6" %> <!-- ← 追加の余白 -->
        <% end %>
      </nav>
    </div>
  </div>
</header>
